<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="p3.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="p3.Perspective"
            name="ViewPerspective"
            id="P3.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="p3.View"
            name="ItemView"
            id="P3.view"
            inject="true">
      </view>
      <view
            class="p3.HistoryView"
            id="P3.view1"
            name="HistoryView"
            restorable="true">
      </view>
      <view
            class="p3.TaskView"
            id="P3.view2"
            name="TaskView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="P3.perspective">
         <view
               id="P3.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
         <view
               id="P3.view1"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="P3.view2"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File"
               tooltip="File">
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Create View">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push"
                  tooltip="Exit">
            </command>
         </menu>
         <menu
               label="Help"
               tooltip="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="Help Content"
                  style="push"
                  tooltip="Help Content">
            </command>
         </menu>
         <menu
               label="Search"
               tooltip="Search">
            <command
                  commandId="org.eclipse.ui.file.refresh"
                  label="Quick Search"
                  style="push"
                  tooltip="Quick Search">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
